{
    "Logging": {
        "LogLevel": {
            "Default": "Information", // Уровень логирования по умолчанию для всего приложения
            "Microsoft.AspNetCore": "Warning", // Уровень логирования для компонентов ASP.NET Core
            "Microsoft.EntityFrameworkCore": "Information", // Уровень логирования для EF Core (может быть "Debug" для подробных SQL-запросов)
            "MyEcommerceEfApi.Services.UserService": "Debug", // Уровень логирования только для вашего UserService
            "MyEcommerceEfApi.Controllers.UsersController": "Debug" // Уровень логирования только для вашего UsersController
        },
        "Console": { // Настройки для вывода в консоль
            "LogLevel": {
                "Default": "Information"
            }
        },
        "Debug": { // Настройки для вывода в окно Debug (Visual Studio)
            "LogLevel": {
                "Default": "Information"
            }
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "MyEcommerceDb": "Data Source=app.db" // Пример строки подключения для SQLite
    }
}
}
